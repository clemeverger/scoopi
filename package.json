{
  "name": "scoopi",
  "version": "1.0.0",
  "description": "CLI tool to scoop documentation websites and convert them to local Markdown files for LLM consumption",
  "type": "module",
  "main": "src/cli/index.js",
  "bin": {
    "scoopi": "src/cli/index.js"
  },
  "scripts": {
    "start": "node src/cli/index.js",
    "test": "node --test tests/**/*.test.js",
    "lint": "eslint src/",
    "dev": "node --watch src/cli/index.js",
    "postinstall": "npx puppeteer browsers install chrome",
    "setup": "npx puppeteer browsers install chrome"
  },
  "keywords": [
    "documentation",
    "crawler",
    "markdown",
    "cli",
    "scraper",
    "extract",
    "llm",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.4.1",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "ora": "^9.0.0",
    "puppeteer": "^24.22.3",
    "turndown": "^7.2.1"
  }
}
